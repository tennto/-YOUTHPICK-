<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.license.view.LicenseActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/oss_notice_youthpick"
        android:textSize="20dp"
        android:paddingHorizontal="20dp"
        android:paddingBottom="20dp"
        android:paddingTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/youthpick_orange"
        android:fontFamily="@font/apple_gothic_900" />

    <TextView
        android:id="@+id/tv_os1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Full Calendar"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/apple_gothic_800"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tv_os1_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_os1_title"
        app:layout_constraintStart_toStartOf="parent"
        android:text="https://github.com/fullcalendar/fullcalendar"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:linksClickable="true"
        android:autoLink="web"
        android:textSize="16dp"
        android:fontFamily="@font/apple_gothic_700" />

    <TextView
        android:id="@+id/tv_os1_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_os1_url"
        app:layout_constraintStart_toStartOf="parent"
        android:text="© 2022  FullCalendar LLC"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:textSize="16dp"
        android:fontFamily="@font/apple_gothic_700" />

    <TextView
        android:id="@+id/tv_os1_license"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_os1_copyright"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Apache License 2.0"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:textSize="16dp"
        android:fontFamily="@font/apple_gothic_700" />

    <TextView
        android:id="@+id/tv_os2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_os1_license"
        app:layout_constraintStart_toStartOf="parent"
        android:text="dialog flow"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/apple_gothic_800"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tv_os2_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_os2_title"
        app:layout_constraintStart_toStartOf="parent"
        android:text="https://dialogflow.cloud.google.com/"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:linksClickable="true"
        android:autoLink="web"
        android:textSize="16dp"
        android:fontFamily="@font/apple_gothic_700" />

    <TextView
        android:id="@+id/tv_os2_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:text="© 2017 Google Firebase"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_os2_url"
        android:fontFamily="@font/apple_gothic_700" />

    <TextView
        android:id="@+id/tv_os2_license"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_os2_copyright"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Apache License 2.0"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:textSize="16dp"
        android:fontFamily="@font/apple_gothic_700" />

    <TextView
        android:id="@+id/tv_os3_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_os2_license"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Dots Indicators"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/apple_gothic_800"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tv_os3_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_os3_title"
        app:layout_constraintStart_toStartOf="parent"
        android:text="https://github.com/tommybuonomo/dotsindicator"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:linksClickable="true"
        android:autoLink="web"
        android:textSize="16dp"
        android:fontFamily="@font/apple_gothic_700" />

    <TextView
        android:id="@+id/tv_os3_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_os3_url"
        app:layout_constraintStart_toStartOf="parent"
        android:text="© 2018 Tommy Buonomo"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:textSize="16dp"
        android:fontFamily="@font/apple_gothic_700" />

    <TextView
        android:id="@+id/tv_os3_license"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_os3_copyright"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Apache License 2.0"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:textSize="16dp"
        android:fontFamily="@font/apple_gothic_700" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="2"
        android:src="@drawable/youthpick_logo"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="30dp" />


</androidx.constraintlayout.widget.ConstraintLayout>